@model QuestionApp.Models.ResultViewModel

<style>
    label {
        font-size: 12em;
    }
</style>

@{
    ViewData["Title"] = "Résultat du test";
}

<h2>Résultat du test <quote>@Model.Questionnaire</quote></h2>

<div class="row">
    <div class="col-md-8 col-md-offset-2 text-center">
        <label class="@ViewBag.classStat">@String.Format("{0:N2} %",Model.PercentResult)</label>
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <a class="btn btn-primary" asp-action="index" asp-controller="Questionnaires">Retour aux questionnaires</a>
    </div>
</div>
